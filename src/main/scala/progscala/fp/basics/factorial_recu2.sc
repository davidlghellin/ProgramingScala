object factorial_recu2 {

  def factorial(i: BigInt): BigInt = {
    @tailrec
    def fact(i: BigInt, acum: BigInt): BigInt = {
      if (i == 1) acum
      else fact(i - 1, i * acum)
    }
    fact(i, 1)
  }                                               //> factorial: (i: BigInt)BigInt


